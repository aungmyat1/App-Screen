{
  "name": "AppScreen Dev Environment",
  "image": "mcr.microsoft.com/devcontainers/python:1-3.11-bookworm",
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/common-utils:2": {},
    "ghcr.io/devcontainers/features/node:1": {
      "version": "20"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-azuretools.vscode-docker",
        "ms-python.python",
        "ms-python.vscode-pylint",
        "ms-python.black-formatter",
        "ms-vscode.vscode-json",
        "bradlc.vscode-tailwindcss",
        "ms-vscode.vscode-typescript-next",
        "ms-vscode-remote.remote-containers",
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint",
        "ms-vsliveshare.vsliveshare"
      ]
    }
  },
  "postCreateCommand": "cd /workspaces/App-Screen && chmod +x .devcontainer/setup.sh && bash .devcontainer/setup.sh",
  "remoteUser": "vscode",
  "runArgs": [
    "--cap-add=SYS_PTRACE",
    "--security-opt",
    "seccomp=unconfined"
  ],
  "containerEnv": {
    "DEVCONTAINER": "true"
  },
  "userEnvProbe": "loginInteractiveShell",
  "remoteEnv": {
    "PATH": "/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin:/usr/local/games:/usr/games"
  },
  "workspaceFolder": "/workspaces/App-Screen",
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspaces/App-Screen,type=bind,consistency=cached"
}