{
  "manifest_version": 3,
  "name": "App Screenshots Extension",
  "version": "1.0.0",
  "description": "Download screenshots from Google Play and App Store",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://play.google.com/*",
    "https://apps.apple.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "App Screenshots"
  },
  "content_scripts": [
    {
      "matches": [
        "https://play.google.com/*",
        "https://apps.apple.com/*"
      ],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}